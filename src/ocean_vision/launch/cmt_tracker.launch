<launch>

  <node pkg="ocean_vision" name="cmt" type="cmt" clear_params="true" output="screen"/>

  <node pkg="ocean_vision" name="listener" type="listener.py" clear_params="true" output="screen">
  <remap from="/cmd_vel" to="/mobile_base/mobile_base_controller/cmd_vel"/>

    <rosparam>
       rate: 5
       max_x: 20.0
       goal_x: 0.7
       x_threshold: 0.1
       y_threshold: 0.15
       y_scale: 0
       x_scale: 1.0
       max_angular_speed: 1.0
       min_angular_speed: 0.05
       max_linear_speed: 0.75
       min_linear_speed: 0.1
    </rosparam>
    
  </node>

</launch>
